<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/menu_layout_margin"
    android:gravity="center">

<LinearLayout
    android:id="@+id/llLength"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="@dimen/menu_layout_margin"
    android:gravity="center_horizontal"
    android:clickable="true"
    >
    <ImageView
        android:id="@+id/ibLength"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_marginRight="@dimen/menu_image_right_margin"
        android:src="@drawable/length"
        android:scaleType="fitXY">
    </ImageView>

    <TextView
        android:id="@+id/tvLength"
        android:layout_width="@dimen/tv_menu_size"
        android:layout_height="wrap_content"
        android:text="@string/tv_length_menu"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_size_menu"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/llSpeed"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/menu_layout_margin"
        android:gravity="center_horizontal"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/ibSpeed"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginRight="@dimen/menu_image_right_margin"
            android:src="@drawable/car"
            android:scaleType="fitXY">
        </ImageView>

        <TextView
            android:id="@+id/tvSpeed"
            android:layout_width="@dimen/tv_menu_size"
            android:layout_height="wrap_content"
            android:text="@string/tv_speed_menu"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_menu"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTemperature"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/menu_layout_margin"
        android:gravity="center_horizontal"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/ibTemperature"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginRight="@dimen/menu_image_right_margin"
            android:src="@drawable/temperature"
            android:scaleType="fitXY"
            >
        </ImageView>

        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="@dimen/tv_menu_size"
            android:layout_height="wrap_content"
            android:text="@string/tv_temperature_menu"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_menu"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llWeight"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/menu_layout_margin"
        android:gravity="center_horizontal"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/ibWeight"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginRight="@dimen/menu_image_right_margin"
            android:src="@drawable/balance"
            android:scaleType="fitXY">
        </ImageView>

        <TextView
            android:id="@+id/Weight"
            android:layout_width="@dimen/tv_menu_size"
            android:layout_height="wrap_content"
            android:text="@string/tv_weight_menu"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_menu"/>
    </LinearLayout>


</LinearLayout>